<% items.each do |notification| %>
<div class = "activity" id = "viewed_<%= notification.trackable.viewed %>">
    <%= link_to gravatar_for(notification.owner), notification.owner %>
    <%= link_to notification.owner.name, notification.owner if notification.owner %>
    liked the <%= link_to notification.trackable.likable_type.downcase, show_path(notification.trackable.likable.episode.season.show, source: "like", source_id: notification.trackable, items: "media", anchor: notification.trackable.likable_type.downcase + "_" + notification.trackable.likable_id.to_s) %> that you added to <%= link_to notification.trackable.likable.episode.title, notification.trackable.likable.episode %>
    </div>
    <% end %>