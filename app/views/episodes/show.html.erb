<% provide(:title, @episode.season.show.title + " | " + @episode.title) %>
  <div class="container" id="episode-display">
    <div class="row">
      <div class = "col-md-6 col-md-offset-3" id = "show-image">
        <%= link_to image_tag(@episode.season.show.thumbnail, width: "125"), show_path(@episode.season.show, season_id: @episode.season) %></br>
        Season <%= @episode.season.season_number %> Episode <%= @episode.episode_number %>
        <h1>
          <%= @episode.title %>
        </h1>  
      </div>
    </div>
    <div class = "row">
      <div class="col-md-4 col-md-offset-4">
        <div id="new_link">
          <%= link_to "Add a quote", new_quote_path(show: @episode.season.show, episode: @episode), remote: true, class: "btn btn-primary" %>
            <%= link_to "Add a clip", new_clip_path(show: @episode.season.show, episode: @episode), remote: true, class: "btn btn-primary" %>
        </div>
      </div>
    </div>
    <div class="row">
      <div class='items transitions-enabled'>
        <%= render @items %>
      </div>
    </div>
  </div>