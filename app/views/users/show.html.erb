<% provide(:title, @user.name) %>
  <div class="container" id = "user-profile">
    <div class="row">
      <aside class="col-md-3">
        <section class="user_info">
          <h1>
        <%= gravatar_for @user %>
        <%= @user.name %>
      </h1>
        Added <%= @user.clips.count %> clips</br>
        and <%= @user.quotes.count %> quotes</br>
        <% if current_user == @user %>
        <a href="http://gravatar.com/emails" target="_blank" rel="noopener" >change image</a>
        <% end %>
        </section>
        <section class="stats">
          <%= render 'shared/stats' %>
        </section>
        <%= render 'follow_form' if logged_in? %>
      </aside>
      <div class="col-md-9" id = "my-lists">
            <% if @user.lists.any? %>
            <h3> <%=@user.name%>'s BUZZLISTS </h3>
            <ul class="lists">
              <%= render @lists %>
            </ul>
            <% end %>
      </div>
    </div>
    <div class = "row">
      <div class = "col-md-12">
        <ul class="nav nav-tabs" id = "user-added">
          <li role="presentation" class= <%= "active" if params[:items] == nil %>>
            <%= link_to "Added by " + @user.name, user_path %>
          </li>
          <li role="presentation" class= <%= "active" if params[:items] == 'liked' %>>
            <%= link_to "Liked by " + @user.name, user_path(items: "liked") %>
          </li>
          </ul>
          <div class='items'>
            <%= render @items %>
          </div>
      </div>
    </div>
  </div>
  </div>
